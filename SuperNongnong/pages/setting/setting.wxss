.container {
    background: #eee;
    background-size: cover;
    background-image: url(http://ww1.sinaimg.cn/large/6deb72a3ly1frtqa7qvq6j20ia0mv77x.jpg);
}
.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-top: 100px;
}

.section {
    margin: 40px;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.item {
    box-sizing: border-box;
    font-size: 14px;
    margin: 30px auto 0;
    padding: 5px 15px;
    width: 100px;
    height: 36px;
    line-height: 36px;
    background: rgba(255,255,255,.5);
    display: flex;
    border-radius: 5px;
}
.icon {
    width: 25px;
    height: 25px;
}
.pay-text {
    line-height: 25px;
    margin-left: 5px;
}

.login {
    width: 100px;
    height: 36px;
    line-height: 36px;
    font-size: 14px;
    background: transparent;
    border: 1px solid #fff;
    color: #000;
}
